<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">

	<navigation-rule>
		<from-view-id>/login.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{userLoginView.login()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/principal.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-action>#{userLoginView.login()}</from-action>
			<from-outcome>failure</from-outcome>
			<to-view-id>/erroLogin.xhtml</to-view-id>
		</navigation-case>

		<navigation-case>
			<from-action>#{userLoginView.entrarSemLogin()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/principal.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{userLoginView.entrarSemLogin()}</from-action>
			<from-outcome>failure</from-outcome>
			<to-view-id>/erroLogin.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/principal.xhtml</from-view-id>

		<navigation-case>
			<from-action>#{userLoginView.logout()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/index.html</to-view-id>
			<redirect/>
		</navigation-case>
		
		<navigation-case>
			<from-action>#{userLoginView.logout()}</from-action>
			<from-outcome>failure</from-outcome>
			<to-view-id>/erroLogin.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/cadastroUsuario.xhtml</from-view-id>
	
		<navigation-case>
			<from-action>#{usuarioMB.cadastraUsuario()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/cadastroUsuario.xhtml</to-view-id>
		</navigation-case>
		
		<navigation-case>
			<from-action>#{usuarioMB.cadastraUsuario()}</from-action>
			<from-outcome>failure</from-outcome>
			<to-view-id>/principal.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/buscaAlocacaoSalas.xhtml</from-view-id>
		
		<navigation-case>
			<from-action>#{alocacaoSalaView.buscar()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/consultaAlocacaoSalas.xhtml</to-view-id>
		</navigation-case>
		<!-- mudar isso, deve gerar uma mensagem informando ao usuario -->
		<navigation-case>
			<from-action>#{alocacaoSalaView.buscar()}</from-action>
			<from-outcome>failure</from-outcome>
			<to-view-id>/buscaAlocacaoSalas.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

</faces-config>
